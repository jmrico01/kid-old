// This is a comment

// fps -1 means that the animation will run at the game's framerate
// This is useful for static animations that require an immediate exit response
// TODO use anim names in "exit" instead of indices

anim Idle1
dir idle1
fps 8
exit * 2 1
exit * 3 0

anim Idle2
dir idle2
fps 8
exit * 2 5
exit * 4 0

anim Walk
dir walk
fps 8
exit 0 3 0
exit 1 0 0
exit 4 4 0
exit 5 1 1

anim Jump1
dir jump1
fps -1
exit 0 0 0
exit 0 2 0

anim Jump2
dir jump2
fps -1
exit 0 1 0
exit 0 2 4